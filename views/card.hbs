<h1>Cards</h1>
<div id="card">
    {{#if course.length}}
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each course}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf='{{@root.csrf}}'>
                    Delete
                </button>
            </td>
        </tr>
        {{/each}}   
    </tbody>
</table>

<p><strong>Price:</strong><span class="price">{{price}}</span></p>
<form action="/orders" method="post">
  <input type="hidden" name="_csrf" value="{{csrf}}">

     <button class="btn">by order</button>
</form>
{{else}}
<p>Trash is empty</p>

{{/if}}
</div>

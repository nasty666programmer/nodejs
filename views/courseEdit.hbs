<h2>Edit Course {{course.title}}!!!</h2>

<form action="/edit" method="POST">
 <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input type="text" name = 'title' id="autocomplete-input" class="autocomplete" placeholder="title" value="{{course.title}}">
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
         
          <input type="text" name = 'images' id="autocomplete-input" class="autocomplete" placeholder="logo" value="{{course.images}}">
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input type="text" name = 'price' value="{{course.price}}" id="autocomplete-input" class="autocomplete" placeholder="price">
        </div>
      </div>
    </div>
  </div>
  <input type='hidden' name="id" value="{{course.id}}"/>
    <button type='submit' class="btn">Edit</button>
</form>

<form action="/remove" method="post">
<input type="hidden" name="id" value='{{course.id}}'>
  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button class="btn btn-remove" >Delete this course</button>
</form>